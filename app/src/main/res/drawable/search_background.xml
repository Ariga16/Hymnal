<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#333333" /> <!-- Dark background for the dropdown -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Padding inside the spinner -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Border (optional) -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" /> <!-- White border -->
</shape>
